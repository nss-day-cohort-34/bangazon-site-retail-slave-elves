@model Bangazon.Models.OrderProduct

@{
    ViewData["Title"] = "DeleteOrderProduct";
}

<h1>Remove Product from Order</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Description)
        </dd>
    </dl>

    <form asp-action="DeleteOrderProduct">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="ViewCart">Back to Shopping Cart</a>
    </form>
</div>
